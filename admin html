<body>
    <h2>Admin Panel - Generate Customer Password</h2>
    <input type="text" id="customerUsername" placeholder="Customer Username"><br>
    <button onclick="generatePassword()">Generate Password</button>

    <h3>Generated Password: <span id="generatedPassword"></span></h3>

    <script>
        function generatePassword() {
            const password = Math.random().toString(36).slice(-8);  // Generate random password
            document.getElementById('generatedPassword').textContent = password;
            // Optionally, you can save the password or send it via email to the customer
        }
    </script>
